#include <string>
#include <iostream>
#include <vector>
#include <stdio.h>
#include <algorithm>
#include <math.h>
#include <queue>
using namespace std;

int main()
{
	string s;
	int num = 1;
	getline(cin, s);
	if (s[0] == ' ')
		num--;
	if (s[s.length() - 1] == ' ')
		num--;
	for (int i = 0; i < s.length(); i++)
	{
		
		if (s[i] == ' ')
			num++;
	}
	cout << num;
	return 0;
}
