#include <string>
#include <iostream>
#include <vector>
#include <stdio.h>
#include <algorithm>
#include <math.h>
#include <queue>
using namespace std;

int main()
{
	string s = { 1 };
	string r;
	while (true)
	{
		cin >> s;
		if (s == "0")
			break;
		r = s;
		reverse(r.begin(), r.end());
		if (r == s)
			printf("yes\n");
		else
			printf("no\n");
	}

	return 0;
}
