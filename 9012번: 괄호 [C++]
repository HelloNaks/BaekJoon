#include <stdio.h>
#include <iostream>
#include <algorithm>
#include <math.h>
#include <queue>
#include <string.h>
#include <stdlib.h>

using namespace std;

int main()
{
	int N, num = 0;
	char T[50];
	cin >> N;
	for (int i = 0; i < N; i++)
	{
		cin >> T;
		num = 0;
		for (int j = 0; j < strlen(T); j++)
		{
			if (T[j] == '(')
				num++;
			else
				num--;
			if (num < 0)
			{
				cout << "NO" << endl;
				break;
			}
		}
		if (num == 0)
			cout << "YES" << endl;
		else if (num > 0)
			cout << "NO" << endl;
	}
	return 0;
}

